<%= link_to "新規投稿",  new_opinion_path%>
<div class="container">
	<div class="row">
		<div class="col-xs-8"> 
			<h1>chatting</h1><br>

						<% @opinions.each do|opinion| %>
							<div class="col-xs-12"> 

								<div class="row">
									<div class="col-xs-2"> 
										<%= attachment_image_tag opinion, :image, :fill, 40, 40, fallback: 'image.jpg',size: '40' %>


										<%= link_to opinion.user.name, user_path(opinion.user) %>

									</div>

									<div class="col-xs-5"> 
										<%= opinion.body %>
									</div>
									<div class="col-xs-5"> 
											<%= attachment_image_tag opinion, :image, :fill, 300, 200, fallback: 'company.jpg',size: '300×200' %>
									
									</div>
								</div>
								<br>
								<div class="row">
									<div class="col-xs-12"> 
										<div class="col-xs-4"> 
											<%=link_to "削除", opinion_path(opinion.id), method: :delete %><br>
										</div>
										<div class="col-xs-4"> 
											<%= link_to "コメント", opinion_path(opinion.id) %>
											<%= opinion.opinion_comments.count %><br>
										</div>
										<div class="col-xs-4"> 
											<% if opinion.favorited_by?(current_user) %>
												
													<%= link_to opinion_favorites_path(opinion), method: :delete do %>
													<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
													<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
													<%= opinion.favorites.count %> いいね
													<% end %>
												
											<% else %>
												
													<%= link_to opinion_favorites_path(opinion), method: :post do %>
													<i class="fa fa-heart-o" aria-hidden="true"></i>
													<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
													<%= opinion.favorites.count %> いいね
													<% end %>
												
											<% end %>
										</div>
									</div>
								</div>
							</div>
							________________________________________________
						<% end %>
			</div>
		<div class="col-xs-4"> 
		</div>
	</div>
</div>





